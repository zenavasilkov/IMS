@using System
@using RecruitmentNotifications.Messages
@model InterviewRescheduledEvent

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Interview Rescheduled</title>
    <style>
        .header {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 20px;
        } 

        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
        }

        .container {
            max-width: 600px;
            margin: 0 auto; 
            padding: 20px; 
            border: 1px solid #e0e0e0;
            border-radius: 6px;
            background-color: #f9f9f9;
        }

        .content {
            font-size: 14px;
        }

        .highlight {
            background-color: #fff3cd;
            padding: 10px;
            border-left: 4px solid #ffca28;
            margin: 10px 0;
        }

        .footer {
            margin-top: 30px;
            font-size: 12px;
            color: #777;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">Interview Rescheduled</div>
        <div class="content">
            <p>Hello,</p>

            <p>Your interview has been rescheduled:</p>

            <div class="highlight">
                <strong>Previous Date:</strong> @Model.ScheduledAt.ToString("MMMM dd, yyyy HH:mm")<br />
                <strong>New Date:</strong> @Model.RescheduledTo.ToString("MMMM dd, yyyy HH:mm")<br />
                <strong>Interview Type:</strong> @Model.InterviewType
            </div>

            <p>Please review your updated interview schedule.</p>

            <p>Best regards,<br />Recruitment Team</p>
        </div>
        <div class="footer">
            &copy; @(DateTime.Now.Year) Recruitment System. All rights reserved.
        </div>
    </div>
</body>
</html>
