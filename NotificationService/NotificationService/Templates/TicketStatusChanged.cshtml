@using System
@model IMS.NotificationsCore.Messages.TicketStatusChangedEvent

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Assignment Status Updated</title>
    @await Html.PartialAsync("EmailStyles")
</head>
<body>
    <div class="container">
        <div class="header">
            Assignment Status Updated
        </div>
        <div class="content">
            <p>Hello,</p>

            <p>The status of your assignment in the Intern Management System has changed:</p>

            <div class="highlight">
                <strong>Title:</strong> @Model.Title <br />
                <strong>Description:</strong> @Model.Description <br />
                <strong>Old Status:</strong> @Model.OldStatus <br />
                <strong>New Status:</strong> @Model.NewStatus
            </div>

            <p>Best regards,<br />Intern Management System Team</p>
        </div>
        <div class="footer">
            &copy; @(DateTime.Now.Year) Intern Management System. All rights reserved.
        </div>
    </div>
</body>
</html>

