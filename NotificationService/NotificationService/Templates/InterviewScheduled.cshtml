@using System
@using RecruitmentNotifications.Messages
@model InterviewScheduledEvent

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Interview Scheduled</title>
    <style>
        .footer {
            margin-top: 30px;
            font-size: 12px;
            color: #777;
        }

        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
        }

        .header {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .content {
            font-size: 14px;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #e0e0e0;
            border-radius: 6px;
            background-color: #f9f9f9;
        }

        .highlight {
            background-color: #e7f3fe;
            padding: 10px;
            border-left: 4px solid #2196f3;
            margin: 10px 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">Interview Scheduled</div>
        <div class="content">
            <p>Hello,</p>

            <p>Your interview has been scheduled:</p>

            <div class="highlight">
                <strong>Interview Type:</strong> @Model.InterviewType<br />
                <strong>Interviewer:</strong> @Model.InterviewerEmail<br />
                <strong>Date & Time:</strong> @Model.ScheduledAt.ToString("MMMM dd, yyyy HH:mm")
            </div>

            <p>Please make sure to be available at the scheduled time.</p>

            <p>Best regards,<br />Recruitment Team</p>
        </div>
        <div class="footer">
            &copy; @(DateTime.Now.Year) Recruitment System. All rights reserved.
        </div>
    </div>
</body>
</html>
