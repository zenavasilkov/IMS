@using System
@using RecruitmentNotifications.Messages
@model CandidatePassedToInternshipEvent

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Congratulations - Next Stage</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #e0e0e0;
            border-radius: 6px;
            background-color: #f9f9f9;
        }

        .header {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .content {
            font-size: 14px;
        }

        .footer {
            margin-top: 30px;
            font-size: 12px;
            color: #777;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">You've Advanced to the Internship Stage</div>
        <div class="content">
            <p>Hello,</p>

            <p>We are pleased to inform you that you have been selected to move forward to the internship stage.</p>
            <p>Our team will reach out to you shortly with scheduling details.</p>

            <p>Best regards,<br />Recruitment Team</p>
        </div>
        <div class="footer">
            &copy; @(DateTime.Now.Year) Recruitment System. All rights reserved.
        </div>
    </div>
</body>
</html>
