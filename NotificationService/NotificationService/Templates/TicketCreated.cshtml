@using System
@model IMS.NotificationsCore.Messages.TicketCreatedEvent

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>New Assignment Created</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #e0e0e0;
            border-radius: 6px;
            background-color: #f9f9f9;
        }

        .header {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .content {
            font-size: 14px;
        }

        .highlight {
            background-color: #e7f3fe;
            padding: 10px;
            border-left: 4px solid #2196f3;
            margin: 10px 0;
        }

        .footer {
            margin-top: 30px;
            font-size: 12px;
            color: #777;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            New Assignment Created
        </div>
        <div class="content">
            <p>Hello,</p>

            <p>A new assignment has been created and assigned to you in the Intern Management System:</p>

            <div class="highlight">
                <strong>Title:</strong> @Model.Title <br />
                <strong>Description:</strong> @Model.Description <br />
                <strong>Deadline:</strong> @Model.Deadline.ToString("MMMM dd, yyyy HH:mm")
            </div>

            <p>Best regards,<br />Intern Management System Team</p>
        </div>
        <div class="footer">
            &copy; @(DateTime.Now.Year) Intern Management System. All rights reserved.
        </div>
    </div>
</body>
</html>

