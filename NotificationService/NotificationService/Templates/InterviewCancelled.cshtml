@using System
@using RecruitmentNotifications.Messages
@model InterviewCancelledEvent

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Interview Cancelled</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #e0e0e0;
            border-radius: 6px;
            background-color: #f9f9f9;
        }

        .header {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .content {
            font-size: 14px;
        }

        .highlight {
            background-color: #fdecea;
            padding: 10px;
            border-left: 4px solid #f44336;
            margin: 10px 0;
        }

        .footer {
            margin-top: 30px;
            font-size: 12px;
            color: #777;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">Interview Cancelled</div>
        <div class="content">
            <p>Hello,</p>

            <p>Your interview has been cancelled:</p>

            <div class="highlight">
                <strong>Interview Type:</strong> @Model.InterviewType<br />
                <strong>Scheduled Date:</strong> @Model.ScheduledAt.ToString("MMMM dd, yyyy HH:mm")<br />
                <strong>Interviewer:</strong> @Model.InterviewerEmail
            </div>

            <p>We will follow up with additional information soon.</p>

            <p>Best regards,<br />Recruitment Team</p>
        </div>
        <div class="footer">
            &copy; @(DateTime.Now.Year) Recruitment System. All rights reserved.
        </div>
    </div>
</body>
</html>
