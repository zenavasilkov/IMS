{
  "RabbitMQ": {
    "HostName": "localhost",
    "UserName": "guest",
    "Password": "guest",
    "VirtualHostName": "/",
    "QueueName": "notification_queue"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog", "Serilog.Exceptions" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": {
      "Name": "Console"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "EmailSettings": {
    "Host": "localhost",
    "Port": 2525,
    "EnableSsl": false,
    "DefaultUserName": "testsender@email.com",
    "SenderEmailPassword": "test",
    "Sender": "NotificationService"
  },
  "AllowedHosts": "*"
}
